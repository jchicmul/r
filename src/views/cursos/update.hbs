<div class="container mt-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <form action="/cursos/update/{{id}}" method="POST">
          <div class="card-footer text-center">
            <b>MODIFICAR CURSO</b>
          </div>
          <div class="card-body">
            <div class="form-group">
              <input name="nombre" type="text" class="form-control text-center" value="{{nombre}}" autofocus>
            </div>
            <div class="form-group">
              <textarea name="url" class="form-control">{{url}}</textarea>
            </div>
            <div class="form-group">
              <input type="text" class="form-control text-center" name="dirigido" value="{{dirigido}}">
            </div>
          </div>
          <div class="card-footer">
            <div class="form-group">
              <button class="btn btn-primary btn-block form-control" type="submit">Modificar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>