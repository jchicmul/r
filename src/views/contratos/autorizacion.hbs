                            data-target="#vistaEvaluadoModal"><i class="fa fa-check" style="color: red;"></i></a>
                        {{/is}}
                    </th>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
            </tfoot>
        </table>
    </div>
</div>

