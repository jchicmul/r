<div class="container mx-auto mt-4">
    <div class="jumbotron p-2">
        <table id="trabajadorEvaluado" class="display table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Alta</th>
                    <th>Num Contrato</th>
                    <th>Días Contrato</th>
                    <th>Vencimiento</th>
